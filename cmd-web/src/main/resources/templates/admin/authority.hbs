{{#partial "title"}}권한조회{{/partial}}
{{#partial "content"}}
	<div class="page-content" ng-app="myApp" class="ng-cloak">
		<div class="page-header">
			<h1>{{projectName}} {{message "menu.dashboard" default="권한조회"}}</h1>
		</div>
		<!-- /.page-header -->
        <div class="col-sm-7" ng-controller="AppController2 as ctrl">
            <div class="widget-box">
                <div class="widget-header"><h4 class="widget-title">Authority Registration Form </h4></div>
                <div class="widget-body">
                    <form ng-submit="ctrl.submit()" name="myForm" class="form-horizontal">
                        <input type="hidden" ng-model="ctrl.authority.id" />
                        <div class="widget-main no-padding">
                            <fieldset>
                                <label class="col-md-2 control-lable" for="authority">Authority</label>
                                <div class="col-md-5">
                                    <input type="text" ng-model="ctrl.authority.authority" id="authority" class="username form-control input-sm" placeholder="Enter authority" required ng-minlength="3"/>
                                    <div class="has-error" ng-show="myForm.$dirty">
                                        <span ng-show="myForm.authority.$error.required">This is a required field</span>
                                        <span ng-show="myForm.authority.$error.minlength">Minimum length required is 3</span>
                                        <span ng-show="myForm.authority.$invalid">This field is invalid </span>
                                    </div>
                                </div>
                            </fieldset>



